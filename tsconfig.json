{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",

    "esModuleInterop": true,
    "experimentalDecorators": true,

    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],

    "module": "esnext",
    "moduleResolution": "node",

    "paths": {
      "~/*": [
        "src/*"
      ],

      "@/*": [
        "src/*"
      ]
    },

    "strict": true,
    "sourceMap": true,

    "target": "es2019",
    "types": [
      "@nuxt/types",
      "@nuxtjs/device",
      "@types/jest",
      "@types/node"
    ]
  },

  "include": [
    "src",
    "test"
  ],

  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
